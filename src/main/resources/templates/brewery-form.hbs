{{#partial "content"}}

    {{#if editBrewery}}
        <h1>Edit this Brewery!</h1>
        <form action="/brewery/{{editBrewery.id}}/update" method="post">
            <label for="description">Edit this brewery's description</label>
            <input id="description" name="description" type="text" value="{{editBrewery.description}}">

    {{else}}
    <h1>Add a new Brewery!</h1>

    <form action="/brewery/new" method="post">
        <label for="description">Brewery Description</label>
        <input id="description" name="description" type="text">

    {{/if}}
        <button type="submit" class="btn btn-default">Go!</button>
    </form>
{{/partial}}

{{> layout.hbs}}