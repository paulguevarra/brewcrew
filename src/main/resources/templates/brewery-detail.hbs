{{#partial "content"}}

    <p>Description:</p>

    <p>{{ brewery.description }}</p>
    <h5>Created At:</h5>
    <p> {{ brewery.createdAt }}</p>
    <h5>Brewery status:</h5>
    <p>
        {{#if brewery.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
        {{/if}}

        <a href="/brewery/{{brewery.id}}/update">Edit this brewery</a><br>
        <a href="/brewery/{{brewery.id}}/delete">DELETE this brewery (no undo)</a>
    </p>

{{/partial}}

{{> layout.hbs}}